// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Products {
  productId String @id @default(uuid())

  nameProduct        String
  descriptionProduct String
  price              String

  created_at DateTime @default(now())

  @@map("products")
}
